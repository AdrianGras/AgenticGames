{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Agent player",
            "type": "debugpy",
            "request": "launch",
            "program": "ui_layer/cli/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--game", "${input:gameName}",
                "--agent", "${input:agentName}",
                "--llm", "${input:llmName}"
            ]
        },
        {
            "name": "user player",
            "type": "debugpy",
            "request": "launch",
            "program": "ui_layer/cli/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--game", "${input:gameName}",
                "--user_input",
            ]
        }
    ],
    "inputs": [
        {
            "id": "gameName",
            "description": "Choose the game",
            "type": "pickString",
            "options": [
                "mistery_sequences",
            ],
            "default": "mistery_sequences"
        },
        {
            "id": "agentName",
            "description": "Choose the agent",
            "type": "pickString",
            "options": [
                "basic_agent",
            ],
            "default": "basic_agent"
        },
        {
            "id": "llmName",
            "description": "Choose the LLM",
            "type": "pickString",
            "options": [
                "gpt-4",
                "gpt-5",
                "grok-4",
                "grok-4-1-fast",
                "grok-4-1-fast-non-reasoning",
            ],
        }
    ]
}
